{
  "name": "cloud-foundry-config-client",
  "version": "1.4.1",
  "description": "A basic cloud foundry config client for Node.js",
  "main": "./lib/cloudFoundryConfigClient.js",
  "types": "./lib/cloudFoundryConfigClient.d.ts",
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adamkl/cloud-foundry-config-client"
  },
  "author": "Adam Kreczko-Lenner",
  "license": "MIT",
  "keywords": [
    "pcf",
    "pivotal",
    "cloud",
    "foundry",
    "spring",
    "config",
    "server"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --forceExit --detectOpenHandles",
    "test:watch": "yarn test --watch",
    "test:coverage": "yarn test --coverage"
  },
  "dependencies": {
    "js-yaml": "3.14.0",
    "node-fetch": "^2.6.1"
  },
  "devDependencies": {
    "@types/jest": "25.2.3",
    "@types/node": "12.12.6",
    "jest": "25.2.3",
    "nock": "12.0.3",
    "ts-jest": "25.2.1",
    "typescript": "3.9.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "<rootDir>/coverage",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json",
      "jsx"
    ]
  }
}
